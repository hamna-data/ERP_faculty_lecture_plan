<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- list View for Topics -->
    <record id="view_faculty_topic_list" model="ir.ui.view">
        <field name="name">faculty.subject.topic.list</field>
        <field name="model">faculty.subject.topic</field>
        <field name="arch" type="xml">
            <list string="Topics">
                <field name="sequence"/>
                <field name="name"/>
                <field name="duration"/>
                <field name="subject_id"/>
            </list>
        </field>
    </record>

    <!-- Form View for Topics -->
    <record id="view_faculty_topic_form" model="ir.ui.view">
        <field name="name">faculty.subject.topic.form</field>
        <field name="model">faculty.subject.topic</field>
        <field name="arch" type="xml">
            <form string="Topic">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="duration"/>
                        <field name="subject_id"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Action for Topics -->
    <record id="action_faculty_topic" model="ir.actions.act_window">
        <field name="name">Topics</field>
        <field name="res_model">faculty.subject.topic</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
