<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_faculty_lecture_plan_list" model="ir.ui.view">
        <field name="name">faculty.lecture.plan.list</field>
        <field name="model">faculty.lecture.plan</field>
        <field name="arch" type="xml">
            <list string="Lecture Plans">
                <field name="name"/>
                <field name="subject_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="total_days"/>
                <field name="hours_per_day"/>
                <field name="topics_per_day"/>
                <field name="teaching_days"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_faculty_lecture_plan_form" model="ir.ui.view">
        <field name="name">faculty.lecture.plan.form</field>
        <field name="model">faculty.lecture.plan</field>
        <field name="arch" type="xml">
            <form string="Lecture Plan">
                <header>
                    <button name="action_print_schedule" string="Print Schedule" type="object" class="btn-primary"
                            invisible="not id"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject_id"/>
                        </group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="total_days" readonly="1"/>
                            <field name="hours_per_day"/>
                            <field name="topics_per_day" readonly="1"/>
                            <field name="teaching_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Topics">
                            <field name="topic_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                        </page>
                        <page string="Schedule Preview">
                            <field name="schedule_lines" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_faculty_lecture_plan" model="ir.actions.act_window">
        <field name="name">Lecture Plans</field>
        <field name="res_model">faculty.lecture.plan</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
