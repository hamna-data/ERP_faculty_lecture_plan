<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View for Subject -->
    <record id="view_faculty_subject_list" model="ir.ui.view">
        <field name="name">faculty.subject.list</field>
        <field name="model">faculty.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View for Subject -->
    <record id="view_faculty_subject_form" model="ir.ui.view">
        <field name="name">faculty.subject.form</field>
        <field name="model">faculty.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Topics">
                            <field name="topic_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="duration"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="duration"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Action for Subjects -->
    <record id="action_faculty_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">faculty.subject</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
